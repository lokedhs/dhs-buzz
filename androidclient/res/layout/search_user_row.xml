<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/search_user_row_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

    <org.atari.dhs.buzztest.androidclient.tools.ReassignableImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/photo_default"
            android:paddingBottom="4dp"
            android:paddingTop="@dimen/display_buzz_link_padding"
            android:paddingLeft="@dimen/display_buzz_link_padding"/>

    <TextView android:id="@+id/user_name_text"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/image"
              android:layout_alignParentTop="true"
              android:textSize="16sp"
              android:padding="8dp"/>

</RelativeLayout>
