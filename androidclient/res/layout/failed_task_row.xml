<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/failed_task_row_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

    <Button android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/failed_task_row_cancel"
            android:textSize="9sp"/>

    <Button android:id="@+id/resend_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/cancel_button"
            android:text="@string/failed_task_row_resend"
            android:textSize="9sp"/>

    <TextView android:id="@+id/title"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_toLeftOf="@id/resend_button"
              android:layout_alignParentLeft="true"
              android:layout_alignParentTop="true"
              android:textSize="14sp"/>

    <TextView android:id="@+id/error_message"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_toLeftOf="@id/resend_button"
              android:layout_alignParentLeft="true"
              android:layout_below="@id/title"
              android:textSize="12sp"
              android:textColor="@color/error_colour"/>

</RelativeLayout>
